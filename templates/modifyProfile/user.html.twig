{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Modifier mon Profil{% endblock %}

{% block CSS %}
    {{ parent() }}
    {% if app.user is null %}
        <link rel="stylesheet" href="{{ asset('CSS/jour/modifyuser.css') }}">
    {% endif %}

    {% if app.user %}


        {% if app.user.theme == 2 or app.user.theme == 0 %}
            {% set t = '/jour/' %}
        {% endif %}
        {% if app.user.theme == 1 %}
            {% set t = '/nuit/' %}
        {% endif %}

        <link rel="stylesheet" href="{{ asset('CSS'~ t ~ 'modifyuser.css') }}">

    {% endif %}

{% endblock %}

{% block body %}

    <div class="modifprofil">
    <h1>Modifier mon profil</h1>
    <div class="infos">
    <div class="info">
        {{ form_start(form) }}
    </div>

    <div class="info">
        {{ form_row(form.username) }}
    </div>

    <div class="info">
        {{ form_row(form.firstName) }}
    </div>

    <div class="info">
        {{ form_row(form.lastName) }}
    </div>

    <div class="info">
        {{ form_row(form.phoneNumber) }}
    </div>

    <div class="info">
        {{ form_row(form.email) }}
    </div>
    <div class="info">
        {{ form_row(form.campus) }}
    </div>
    <div class="label+icon">
        <p>Ajouter votre photo</p>
        <a href="{{ path('avatar_register') }}"><img src="{{ asset('images/icons8-upload-64.png') }}" alt=""></a>
    </div>


    <button type="submit" class="btn">Enregistrer</button>
    {{ form_end(form) }}


    <div class="msgflash">
        {% for success in app.flashes('success') %}
            {{ success }}
        {% endfor %}
    </div>

{% endblock %}