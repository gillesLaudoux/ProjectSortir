{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Ma Photo{% endblock %}




{% block CSS %}
    {{ parent() }}
    {% if app.user is null %}
        <link rel="stylesheet" href="{{ asset('CSS/jour/avatarphoto.css') }}">
    {% endif %}

    {% if app.user %}


        {% if app.user.theme == 2 or app.user.theme == 0 %}
            {% set t = '/jour/' %}
        {% endif %}
        {% if app.user.theme == 1 %}
            {% set t = '/nuit/' %}
        {% endif %}

        <link rel="stylesheet" href="{{ asset('CSS'~ t ~ 'avatarphoto.css') }}">

    {% endif %}

{% endblock %}

{% block body %}

    {# TODO Faire les champs pour l'insertion d'avatar  #}
    <div class="divupload">
        <h1>Ajouter ma photo</h1>
        {{ form_start(avatarForm) }}
        <div class="sousdivupload">
            {{ form_row(avatarForm.AvatarFileName) }}
        </div>
        <div class="sousdivupload">
            {{ form_row(avatarForm.AvatarFileType) }}
        </div>
        <div class="sousdivupload">
            {{ form_row(avatarForm.Avatar) }}
        </div>
        <a href="{{ path('modify', {'username': app.user.username}) }}"><button>Envoyer</button></a>
        {{ form_end(avatarForm) }}


    </div>
{% endblock %}
