{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Login or Register{% endblock %}



{% block CSS %}
    {{ parent() }}
    {% if app.user is null %}
        <link rel="stylesheet" href="{{ asset('CSS/jour/mainpage.css') }}">
    {% endif %}

    {% if app.user %}


        {% if app.user.theme == 2 or app.user.theme == 0 %}
            {% set t = '/jour/' %}
        {% endif %}
        {% if app.user.theme == 1 %}
            {% set t = '/nuit/' %}
        {% endif %}

        <link rel="stylesheet" href="{{ asset('CSS'~ t ~ 'mainpage.css') }}">

    {% endif %}


{% endblock %}

{% block body %}
    <div class="mainpagecontent">
        <div class="bloctitre">
            <div class="titreappli">
                <h1>Hang Out</h1>
            </div>
            <div class="logoappli">
                <img src="{{ asset('images/logo HO noir.png') }}" alt="">
            </div>
            <div class="descriptionappli">
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Animi aperiam ducimus illum inventore non
                    quaerat, quidem velit.t amet, consectetur adipisicing elit.</p>
            </div>
        </div>
        <div class="blocbouton">
            <button class="login">
                <a href="{{ path('app_login') }}">Login</a>
            </button>
            <button class="register">
                <a href="{{ path('app_register') }}">Register</a>
            </button>
        </div>
    </div>

{% endblock %}



